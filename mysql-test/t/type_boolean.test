#
# FALSE, TRUE, and UNKNOWN will be substitutes for 0, 1, and NULL
# UNKNOWN is not implemented as NULL yet. Run below SELECT if implemented
# SELECT FALSE, TRUE, UNKNOWN;
#

SELECT FALSE, TRUE;

#
# Check if boolean columns get created correctly with BOOL or BOOLEAN
#

CREATE TABLE t1 (b1 BOOLEAN, b2 BOOL);
SHOW CREATE TABLE t1;

DROP TABLE t1;

CREATE TABLE t1 (b BOOLEAN);
INSERT INTO t1 VALUES (FALSE), (TRUE), (NULL);

# Check values get fetched correctly
SELECT * FROM t1;
SELECT * FROM t1 WHERE b;
SELECT * FROM t1 WHERE NOT b;
SELECT * FROM t1 WHERE b IS NULL;
SELECT * FROM t1 WHERE b IS NOT NULL;

# Insert values that should all be TRUE/1
INSERT INTO t1 VALUES (0.2), (3), (-1), (-1.5), ("0.1");
SELECT * FROM t1;

DROP TABLE t1;
